{
  "compilerOptions": {
    "moduleResolution": "nodeNext",
    "target": "es2017",
    "strict": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "module": "esnext"
  },
  "include": [
    "src",
    "scripts",
    "rollup.config.ts",
    "babel.config.js",
    "jest.config.js",
    ".eslintrc.js",
    "typedoc.js"
  ]
}
